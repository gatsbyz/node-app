{
  "name": "node-app",
  "version": "0.0.1",
  "description": "My Simple Node.js API",
  "author": "gatsbyz",
  "license": "",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node -r ./dist/preload.js dist/main.js",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:run": "npm run typeorm migration:run -- -d ./src/typeorm.ts",
    "migration:generate": "npm run typeorm -- -d ./src/typeorm.ts migration:generate ./src/migrations/$npm_config_name",
    "migration:create": "npm run typeorm -- migration:create ./src/migrations/$npm_config_name",
    "migration:revert": "npm run typeorm -- -d ./src/typeorm.ts migration:revert",
    "lint": "eslint . --ext .js,.ts --ignore-path=.eslintignore --fix",
    "test": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.3",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.3",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.6.7",
    "axios-retry": "^3.1.9",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "express": "^4.17.1",
    "express-openapi-validate": "^0.5.1",
    "express-openapi-validator": "^4.12.15",
    "express-session": "^1.17.2",
    "file-type": "^19.0.0",
    "helmet": "^4.2.0",
    "js-yaml": "^3.14.0",
    "lodash": "^4.17.20",
    "morgan": "^1.10.0",
    "node-abort-controller": "^3.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.12",
    "request-ip": "^3.3.0",
    "rxjs": "^7.8.0",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.20",
    "typescript": "^4.2.4",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.3.3",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^28.1.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.38",
    "@types/supertest": "^2.0.7",
    "@typescript-eslint/parser": "^2.13.0",
    "concurrently": "^5.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sonarjs": "^0.5.0",
    "jest": "^26.6.3",
    "lint-staged": "^9.5.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6"
  },
  "files": [
    "src"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node"
  }
}
